<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MasterRollerDice" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/rojoPrincipal</item>
        <item name="colorSecondary">@color/rojoSecundario</item>
        <item name="background">@color/fondoOscuro</item>
        <item name="toolbarStyle">@color/black</item>
        <item name="drawerLayoutStyle">@color/FondoDrawer_ModoOscuro</item>
        <item name="android:fontFamily">@font/chakra_petch_regular</item>
        <item name="android:textColor">@color/white</item>

        <item name="buttonStyle">@color/detalles_ModoOscuro</item>

        <!-- Add this line to apply the drawer arrow style globally -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.MasterRollerDice" parent="Base.Theme.MasterRollerDice" />

    <style name="DrawerTextStyle" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/chakra_petch_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilo para el diÃ¡logo de filtros -->
    <style name="MyAlertDialogStyle" parent="Theme.Material3.DayNight.Dialog.Alert">
        <item name="android:windowBackground">?attr/background</item>
        <item name="colorAccent">@color/rojoPrincipal</item>
        <item name="android:colorAccent">@color/rojoPrincipal</item>
    </style>

</resources>