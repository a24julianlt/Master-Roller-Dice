<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicioFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoOscuro"
    tools:context=".InicioFragment">

    <GridLayout
        android:id="@+id/gridDados"
        android:layout_width="865px"
        android:layout_height="955px"
        android:layout_marginTop="10dp"
        android:alignmentMode="alignBounds"
        android:columnCount="3"
        android:gravity="center"
        android:rowCount="3"
        android:useDefaultMargins="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- D4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardD4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/rojoSecundario"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dado_inicio_sin_blanco" />
        </androidx.cardview.widget.CardView>

        <!-- D6 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardD6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/rojoSecundario"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dado_inicio_sin_blanco" />
        </androidx.cardview.widget.CardView>

        <!-- D8 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardD8"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/rojoSecundario"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dado_inicio_sin_blanco" />
        </androidx.cardview.widget.CardView>

        <!-- D10 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardD10"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/rojoSecundario"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dado_inicio_sin_blanco" />
        </androidx.cardview.widget.CardView>

        <!-- D12 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardD12"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/rojoSecundario"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dado_inicio_sin_blanco" />
        </androidx.cardview.widget.CardView>

        <!-- D20 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardD20"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/rojoSecundario"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dado_inicio_sin_blanco" />
        </androidx.cardview.widget.CardView>

        <!-- D100 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardD100"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/rojoSecundario"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dado_inicio_sin_blanco" />
        </androidx.cardview.widget.CardView>

    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRoll"
        android:layout_width="470px"
        android:layout_height="235px"
        android:fontFamily="@font/chakra_petch_bold"
        android:text="@string/roll"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="40sp"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridDados" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="250px"
        android:layout_height="250px"
        android:text="543"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRoll" />

    <View
        android:id="@+id/bloqueExpandable"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:background="@color/rojoPrincipal"
        app:circularflow_radiusInDP="30dp"
        android:elevation="10dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>